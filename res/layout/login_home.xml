<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_home"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:gravity="bottom"
    android:padding="0dp"
    android:weightSum="10" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="100dp"
        android:layout_weight="4"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp" >

        <ImageView
            android:layout_margin="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_whyq" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:padding="15dp"
        android:baselineAligned="false"
        android:orientation="vertical"
        android:weightSum="5.8" >

        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:background="@drawable/btn_home1"
            android:baselineAligned="false"
            android:gravity="center"
            android:onClick="onClickedSignup"
            android:text="Sign Up"
            android:textColor="#818181" >
        </Button>

        <Button
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:background="@drawable/bg_btn_login"
            android:baselineAligned="false"
            android:gravity="center"
            android:onClick="onClickedLogin"
            android:text="Sign In"
            android:textColor="#818181" >
        </Button>

        <RelativeLayout
            android:id="@+id/rl_login_fb"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:background="@drawable/btn_login_facebook" >

            <ImageView
                android:id="@+id/iconFb"
                 android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/icon_facebook" />

            <Button
                android:id="@+id/btnFbLogin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:gravity="center"
                android:onClick="onClickedLoginFB"
                android:paddingLeft="5dp"
                android:text=""
                android:textColor="#fefefe" >
            </Button>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_login_tw"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:background="@drawable/btn_login_twitter" >

            <ImageView
                android:id="@+id/iconTw"
                android:visibility="gone"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/icon_twitter" />

            <Button
                android:id="@+id/btnLoginTw"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:background="@color/transparent"
                android:onClick="onClickedLoginTW"
                android:text=""
                android:textColor="#fefefe" >
            </Button>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="1.1"
            android:background="@drawable/btn_login_guest" 
            android:baselineAligned="false"
            android:gravity="center"
            android:onClick="onClickedSkipLogin" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:textColor="#f5f5f5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>